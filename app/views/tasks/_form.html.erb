<div class="row">
  <div class="col-xs-12 col-sm-offset-2 col-md-offset-2 col-sm-8 col-md-8 col-lg-offset-3 col-lg-6">
    <!-- Form_forに対してCSSクラスを設定する場合、htmlオプションとして指定することができる -->
    
    <%= form_for(task) do |f| %>
      <% if task.errors.any? %>
        <!-- edited on 2017/06/18 for adding Bootstrap (start) -->
        <!--<div id="error_explanation">-->
        <div class="alert alert-warning">
        <!-- End of Edit -->
          <ul>
            <% task.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Edited on 2017/06/18 (Bootcampの追加処理) (start) -->
      <!--<%= f.label :content, 'タスク' %>-->
      <!--<%= f.text_field :content %>-->
      
      <!--<%= f.label :status, 'ステータス' %>-->
      <!--<%= f.text_field :status %>-->
      <!--<%= f.submit '登録' %>-->
      <!-- The above is changed as follows; -->
      
      <div class="form-group">
        <%= f.label :content, 'タスク' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :status, 'ステータス' %>
        <%= f.text_field :status, class: 'form-control' %>
      </div>
      
      <%= f.submit '登録', class: 'btn btn-primary' %>
    
      <!-- Edited on 2017/06/18 (Bootcampの追加処理) (end) -->
    <% end %>
  </div>
</div>